#!/bin/env bash
set -ex
DIR=~/.turbodl
if [ -d "$DIR" ]; then cd "$DIR"; fi
zip -r turbo.zip * -x md5 -x tasks -x site -x url -x one -x two -x links -x titles.txt -x *list
if [ ! -e md5 ]; then md5sum turbo.zip > md5; fi
if [ $(md5sum turbo.zip | sed 's/  .*//') == $(cat md5 | sed 's/  .*//') ]; then
    exit
else
    md5sum turbo.zip > md5
    if [ "$USER" == '' ]; then
        echo | mutt -s 'turbodlbot' -i mtoday stoday -a turbo.zip -- persie@turbodl.xyz info@turbodl.xyz
    fi
fi
